<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarColored" parent="Theme.ForumProject">
        <item name="android:textColorSecondary">#FFFFFFFF</item>

    </style>
    <style name="ForumProjectNight" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>

        <item name="colorPrimaryVariant">@color/purple_500</item>
        <item name="colorOnPrimary">@color/night_text_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/night_text_color</item>
        <item name="android:textColorPrimary">@color/night_text_color</item>
        <item name="colorPrimaryDark">@color/purple_200</item>

    </style>
    <style name="ForumProjectDay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorPrimary">@color/text_color</item>
        <item name="colorPrimaryDark">@color/text_color</item>
    </style>
</resources>