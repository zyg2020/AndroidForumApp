<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:id="@+id/author_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/default_avatar"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/post_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/author_avatar"
        android:paddingBottom="5dp"
        android:text="username"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/post_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_username"
        android:layout_toRightOf="@+id/author_avatar"
        android:text="post_date"
        android:textAlignment="textStart"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/post_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_date"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"

        android:paddingBottom="5dp"
        android:text="Title"
        android:textAlignment="textStart"
        android:textSize="23sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/post_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_title"
        android:layout_marginBottom="10dp"
        android:text="post_description"
        android:textAlignment="textStart"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/post_image"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/post_description"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="10dp"/>

    <ImageView
        android:id="@+id/post_image2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@+id/post_description"
        android:layout_marginEnd="0dp"
        android:layout_toRightOf="@+id/post_image"
        android:scaleType="centerCrop" />






</RelativeLayout>